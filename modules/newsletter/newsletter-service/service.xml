<?xml version="1.0"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 7.2.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_7_2_0.dtd">

<service-builder dependency-injector="ds" package-path="com.liferay.training.newsletter">
	<author>Son Truong</author>
	<namespace>TS</namespace>
	<!--<entity data-source="sampleDataSource" local-service="true" name="Foo" remote-service="false" session-factory="sampleSessionFactory" table="foo" tx-manager="sampleTransactionManager uuid="true"">-->
	<entity local-service="true" name="NewsletterIssue" remote-service="true" uuid="true">

		<!-- PK fields -->

		<column name="newsletterIssueId" primary="true" type="long" />

		<!-- Other fields -->
		<column name="companyId" type="long" />
		<column name="groupId" type="long" />
		<column name="issueNumber" type="int" />
		<column name="title" type="String" />
		<column name="description" type="String" />
		<column name="issueDate" type="Date" />
		<column name="status" type="int" />
		<column name="resourcePrimKey" type="long" />
		<!-- Order -->

		<order by="desc">
			<order-column name="issueDate" />
		</order>

		<!-- Finder methods -->

		<finder name="resourcePrimKey" return-type="NewsletterIssue">
			<finder-column name="resourcePrimKey" />
		</finder>

		<!-- References -->

		<reference entity="AssetEntry" package-path="com.liferay.portlet.asset" />
		<reference entity="AssetTag" package-path="com.liferay.portlet.asset" />
	</entity>

	<entity local-service="true" name="NewsletterArticle" remote-service="true" uuid="true">

		<!-- PK fields -->

		<column name="newsletterArticleId" primary="true" type="long" />

		<!-- Other fields -->
		<column name="companyId" type="long" />
		<column name="groupId" type="long" />
		<column name="classNameId" type="long" />
		<column name="classPK" type="long" />
		<column name="resourcePrimKey" type="long" />
		<column name="title" type="String" />
		<column name="author" type="String" />
		<column name="status" type="int" />
		<column name="order" type="int" />
		<column name="content" type="String" />

		<!-- Order -->

		<order by="desc">
			<order-column name="order" />
		</order>

		<!-- Finder methods -->

		<finder name="resourcePrimKey" return-type="NewsletterArticle">
			<finder-column name="resourcePrimKey" />
		</finder>

		<!-- References -->

		<reference entity="AssetEntry" package-path="com.liferay.portlet.asset" />
		<reference entity="AssetTag" package-path="com.liferay.portlet.asset" />
	</entity>
</service-builder>